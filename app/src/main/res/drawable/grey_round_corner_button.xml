<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/resetButtonBegin" />
            <gradient android:angle="-90" android:startColor="@color/resetButtonBegin" android:endColor="@color/resetButtonClicked"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/resetButtonFocused" />
            <solid android:color="@color/resetButtonBegin"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="1dip" android:color="@color/resetButtonBegin" />
            <gradient android:angle="-90" android:startColor="@color/resetButtonBegin" android:endColor="@color/resetButtonBegin" />
        </shape>
    </item>
</selector>