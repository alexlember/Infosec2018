<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/beginButtonBegin" />
            <gradient android:angle="-90" android:startColor="@color/beginButtonBegin" android:endColor="@color/beginButtonClicked"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/beginButtonFocused" />
            <solid android:color="@color/beginButtonBegin"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/beginButtonDisabled" />
            <solid android:color="@color/beginButtonDisabled"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="1dip" android:color="@color/beginButtonBegin" />
            <gradient android:angle="-90" android:startColor="@color/beginButtonBegin" android:endColor="@color/beginButtonBegin" />
        </shape>
    </item>
</selector>