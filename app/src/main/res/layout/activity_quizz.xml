<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorPrimaryDark"
        tools:context=".QuizzActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/headerBackgroundColor"
            android:orientation="vertical">

        <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="10dp"
                style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"

                android:layout_marginTop="5dp"
                android:progressTint="@color/progressTintColor"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:id="@+id/progressBar"
        />
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/questionNumberLabel"
                    android:textColor="@color/questionNumberTextColor"
                    android:textSize="14dp"
                    android:layout_alignParentLeft="true"
                    android:text="Вопрос номер: "/>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/headerBackgroundColor"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/questionText"
                android:textColor="@color/questionNumberTextColor"
                android:layout_margin="10dp"
                android:background="@color/textBackgroundColor"
                android:textSize="20dp"
                android:gravity="center"/>

        <RadioGroup
                android:layout_width="181dp"
                android:layout_height="151dp" tools:layout_editor_absoluteY="192dp"
                android:layout_margin="10dp"
                android:background="@color/radioButtonGroupBackgroundColor"
                android:id="@+id/answersRadioGroup"
                tools:layout_editor_absoluteX="46dp">
            <RadioButton
                    android:text="RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="287dp"
                    tools:layout_editor_absoluteX="70dp" android:id="@+id/radioButton"/>
            <RadioButton
                    android:text="RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="386dp"
                    tools:layout_editor_absoluteX="70dp" android:id="@+id/radioButton2"/>
            <RadioButton
                    android:text="RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="335dp"
                    tools:layout_editor_absoluteX="70dp" android:id="@+id/radioButton3"/>
            <RadioButton
                    android:text="RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="239dp"
                    tools:layout_editor_absoluteX="70dp" android:id="@+id/radioButton4"/>
        </RadioGroup>

        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@color/headerBackgroundColor"
                android:layout_height="wrap_content">

            <Button
                    android:layout_width="0dp"
                    android:layout_weight=".70"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:text="Подтвердить"
                    android:id="@+id/submitButton"
                    android:background="@color/buttonColor"/>
            <Button
                    android:layout_width="0dp"
                    android:layout_weight=".30"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:text="Начать заново"
                    android:id="@+id/resetButton"
                    android:background="@color/buttonColor"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>